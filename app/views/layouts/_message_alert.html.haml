- case type.to_sym 
- when :alert, :danger, :error, :validation_errors, :warning
  - alert = 'alert-danger'
- when :warning, :todo
  - alert = 'alert-warning'
- when :notice, :success
  - alert = 'alert-success'
- else 
  'alert-info'

%div{class:"alert #{alert} alert-dismissible", role: "alert"}
  %button{type:"button", class:"close", "data-dismiss"=>"alert"}
    %span{"aria-hidden"=>"true"}
      &times;
    %span.sr-only
      Close
  = content
