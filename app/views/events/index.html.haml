.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          = link_to new_event_path do
            %button.btn.btn-success{:type => "button"}
              %i.fa.fa-plus &nbsp;New
        .ibox-content
          %h1 Listing events

          %table.eventList.table.table-outline.table-striped
            %thead
              %tr
                %th Title
                %th Date
                %th Start time
                %th End time
                %th Length
                %th Location
                %th
                %th
                %th

            %tbody
              - @events.each do |event|
                %tr
                  %td= event.title
                  %td= event.date
                  %td= event.start_time
                  %td= event.end_time
                  %td= event.length
                  %td= event.location_id
                  %td= link_to 'Show', event
                  %td= link_to 'Edit', edit_event_path(event)
                  %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }

          %br
